extends ./layout
block content
  h1 Books
  p
    a.button(href='/books/new') Create New Book
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
    tbody
      each book in books
        tr
          td 
            a(href=`/books/${book.id}`)= book.title
          td= book.author
          td= book.genre
          td= book.year

  div.pagination
  h5 Go to Page...
    ul.pagination-list
      - for (let i=0; i < Math.ceil(totalBooks / 5); i++)
        li.pagination-links
          a(href="/books/page/" + i)= i + 1